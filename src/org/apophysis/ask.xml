<?xml version="1.0" encoding="UTF-8"?>
<dialog name="askdialog" columns="1" width="440" height="140" modal="true"
	>

	<panel columns="1" weightx="1" weighty="1" gap="10"
		left="50" right="50" top="20" bottom="10">

		<label  name="question" weightx="1" weighty="1" 
			halign="left" valign="center" />

		<textfield name="answer" weightx="2" weighty="1"
			halign="fill" valign="center" />

	</panel>

	<panel columns="2" weightx="1" gap="100"
		left="100" right="100" top="10" bottom="10">
		<button text=" Cancel " type="cancel" weightx="1"
			action="cancelAsk()"/>
		<button text="  OK   " type="default" weightx="1"
			action="acceptAsk()"/>
	</panel>
</dialog>
